<div class="container">
  <div class="d-flex justify-content-between align-items-center">
    <h1>My lists</h1>
    <%= link_to "Add list", new_list_path, class: "btn btn-secondary rounded-pill" %>
  </div>
  <% @lists.each do |list|  %>
    <div class="card p-2">
      <div class="d-flex justify-content-start align-items-center">
        <%= cl_image_tag list.photo.key, height: 100, width: 100, crop: :fill, class: "me-2" %>
        <p><%= link_to "#{list.name}", list_path(list)%></p>
      </div>
    </div>
  <%end%>
</div>
